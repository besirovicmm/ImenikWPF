<Window x:Class="Imenik.OsobeEditor"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Imenik"
        mc:Ignorable="d"
        Title="OsobeEditor" Height="450" Width="800">
    <UniformGrid Columns="2">
        <Label Content="Ime"/>
        <TextBox Text="{Binding Ime,UpdateSourceTrigger=Explicit}"/>
        <Label Content="Prezime"/>
        <TextBox Text="{Binding Prezime,UpdateSourceTrigger=Explicit}"/>
        <Label Content="Broj"/>
        <TextBox Text="{Binding Telefon,UpdateSourceTrigger=Explicit}"/>
    
        <Button Content="Ponisti" Click="Button_Click_1"/>
        <Button Content="OK" Click="Button_Click"/>
    </UniformGrid>
</Window>
