<Window x:Class="Imenik.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Imenik"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" Closed="Window_Closed">
    <DockPanel>
        <StackPanel DockPanel.Dock="Right" Width="100" VerticalAlignment="Center">
        <Button Content="Dodaj" Click="Button_Click"/>
        <Button Content="Izmeni"/>
        <Button Content="Obrisi" Click="Button_Click_1"/>
        </StackPanel>
        <StackPanel Orientation="Horizontal" DockPanel.Dock="Top" VerticalAlignment="Center">
            <Label Content="Pretraga"/>
            <TextBox Width="500"/>
        </StackPanel>
        <DataGrid Name="dg" ColumnWidth="*" IsReadOnly="True">
            
        </DataGrid>
    </DockPanel>
</Window>
